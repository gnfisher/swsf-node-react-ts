{
  "name": "swsf",
  "version": "1.0.0",
  "description": "Software for the swsfonline.com forums",
  "main": "build/index.js",
  "author": "Greg Fisher <greg@gnfisher.com>",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5"
  },
  "scripts": {
    "install": "(cd server && yarn) && (cd client && yarn)",
    "start": "cd server && yarn start",
    "build": "rimraf ./sever/build && concurrently \"yarn tsc -b server\" \"PARCEL_WORKERS=2 cd client && yarn build\"",
    "dev": "concurrently \"(cd server && yarn start)\" \"(cd client && yarn -s parcel watch index.html)\"",
    "heroku-postbuild": "yarn build"
  },
  "dependencies": {
    "concurrently": "^5.3.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2"
  }
}
